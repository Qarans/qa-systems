{% extends 'front/template/user/main' %}

{% block singleScript %}
	{{HTML_script('js/plugin/bootstrap-datepicker.js')|raw}}
	{{HTML_script('js/_videos.js')|raw}}
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-lg-4">
			<form role="search">
				<div class="input-group">
					<input type="text" value="{{Input_get('q')}}" name="q" class="form-control">
					<span class="input-group-btn">
						<button class="btn btn-default" type="submit">Cari Data</button>
					</span>
				</div>
			</form>
		</div>
		<div class="col-lg-8 text-right">
			{{paginator|raw}}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="table-responsive">
				{% if video is not empty %}
				<table class="table table-hover">
					<thead>
						<tr>
							<th width="50px">#</th>
							<th width="500px">Name</th>
							<th width="100px">Video</th>
							<th width="100px">Published at</th>
							<th width="100px"></th>
						</tr>
					</thead>
					<tbody>
					{% for d in video %}
						{% set no = no + 1 %}
						<tr class="listdata" id="{{i}}">
							<td> {{no}} </td>
							<td> {{d.name}} </td>
							<td> <iframe width="200" height="135" src="https://www.youtube.com/embed/{{d.youtube_id}}" frameborder="0" allowfullscreen></iframe> </td>
							<td> {{ d.created_at|date("F jS \\a\\t g:ia") }} </a></td>
							<td>
								<div class="btn-group">
									<button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown"> Action <span class="caret"></span> </button>
									<ul class="dropdown-menu pull-right" role="menu">
										{# <li><a href="{{URL_route('videos.show', d.id)}}">Lihat Detail brochure</a></li> #}
										<li><a href="{{URL_route('videos.edit', d.id)}}">Ubah Video	</a></li>
										<li class="divider"></li>
										<li><a href="{{URL_route('videos.deleting', d.id)}}" class="deleteData" id="{{i}}">Delete</a></li>
									</ul>
								</div>
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
				{% else %}
					<div class="alert alert-info">
						You dont have any data for now, please write new data
					</div>
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}